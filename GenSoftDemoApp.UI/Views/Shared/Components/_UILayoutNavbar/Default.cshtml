@model List<CategoryViewModel>
<!-- Spinner Start -->
<div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
    <div class="spinner-grow text-primary" role="status"></div>
</div>
<!-- Spinner End -->
<!-- Navbar start -->
<div class="container-fluid fixed-top">
    <div class="container topbar bg-primary d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
                <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Meram, Konya</a></small>
                <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">info@gensoftdemoapp.com</a></small>
            </div>
            <div class="top-link pe-2">
                <a href="#" class="text-white"><small class="text-white mx-2">Gizlilik Politikamız</small>/</a>
                <a href="#" class="text-white"><small class="text-white mx-2">Kullanım Koşulları</small>/</a>
                <a href="#" class="text-white"><small class="text-white ms-2">Satış Ve İade</small></a>
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a href="/" class="navbar-brand"><h1 class="text-primary display-7">GenSoftDemoApp</h1></a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="/" class="nav-item nav-link active">Anasayfa</a>
                    <a asp-action="Products" asp-controller="Home" class="nav-item nav-link">Ürünler</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Kategoriler</a>
                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                            @foreach (var category in Model)
                            {
                                <a asp-action="Products" asp-controller="Home" asp-route-categoryId="@category.Id" class="dropdown-item">@category.Title</a>
                            }
                        </div>
                    </div>
                    <a asp-action="Contact" asp-controller="Home" class="nav-item nav-link">İletişim</a>
                </div>
                <div class="d-flex m-3 me-0" title="Arama">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>



                    @if (!string.IsNullOrEmpty(@User.Identity?.Name))
                    {
                        <a asp-action="MyCart" asp-controller="Cart" class="position-relative me-4 my-auto" title="Sepetim">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">@ViewBag.Count</span>
                        </a>
                        <a href="#" class="my-auto me-4" title="Panele Git">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                        <a href="/Auth/Logout" class="my-auto me-4" title="Çıkış Yap">
                            <i class="fas fa-sign-out-alt fa-2x"></i>

                        </a>
                    }
                    else
                    {
                        <a href="/Auth/Login" class="my-auto me-4" title="Giriş Yap">
                            <i class="fas fa-sign-in-alt fa-2x"></i>
                        </a>

                        <a href="/Auth/Register" class="my-auto me-4" title="Kayıt Ol">
                            <i class="fas fa-registered fa-2x"></i>
                        </a>

                    }

                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->
<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ürün Adı ile Arayın</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control p-3" placeholder="Ürün Adı" aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->