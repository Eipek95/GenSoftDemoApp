<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/panel" class="brand-link">
        <img src="~/panel/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">GenSoftDemoApp</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/panel/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@ViewBag.userName</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Ara" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                <li class="nav-item">
                    <a href="/panel" class="nav-link">
                        <i class="nav-icon fas  fa-chart-pie"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Siteye Dön
                        </p>
                    </a>
                </li>
                @if (ViewBag.isInAdminRole)
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-copy"></i>
                            <p>
                                Kategoriler
                                <i class="fas fa-angle-left right"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/panel/admincategory/getall" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Kategori Listesi</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/panel/admincategory/create" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Kategori Ekle</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fab fa-product-hunt"></i>
                            <p>
                                Ürünler
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="/panel/adminproduct/getall" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ürün Listesi</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/panel/adminproduct/create" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ürün Ekle</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a href="/panel/adminorder/index" class="nav-link">
                            <i class="nav-icon fas fa-boxes"></i>
                            <p>
                                Siparişler
                            </p>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a href="/panel/home/myorders" class="nav-link">
                        <i class="nav-icon fas fa-box"></i>
                        <p>
                            Siparişlerim
                        </p>
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-action="PasswordChange" asp-controller="User" asp-area="Panel" class="nav-link">
                        <i class="nav-icon fas fa-key"></i>
                        <p>
                            Şifre Değiştir
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Logout" asp-controller="Auth" asp-area="" class="nav-link">
                        <i class="nav-icon fas fa-sign-out-alt"></i>
                        <p>
                            Çıkış Yap
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>
