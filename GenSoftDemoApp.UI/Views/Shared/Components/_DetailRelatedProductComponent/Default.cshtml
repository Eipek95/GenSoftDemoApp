@model List<ProductViewModel>

<h1 class="fw-bold mb-0">Benzer Ürünler</h1>
<div class="vesitable" id="relatedProductSection">
    <div class="owl-carousel vegetable-carousel justify-content-center">

        @foreach (var product in Model)
        {
        <div class="border border-primary rounded position-relative vesitable-item">
            <div class="vesitable-img">
                <img src="@product.ImageUrl" class="img-fluid w-100 rounded-top" alt="">
            </div>
            <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">Taze</div>
            <div class="p-4 pb-0 rounded-bottom">
                <h4>@product.Title</h4>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit sed do eiusmod te incididunt</p>
                    <p class="text-dark fs-5 fw-bold text-center">@product.Price₺ / kg</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                   
                        <a asp-controller="Cart" asp-action="AddCart"
                           asp-route-productId="@product.Id"
                           asp-route-quantity="1"
                           asp-route-returnUrl="/Home/Detail?productId=@product.Id#relatedProductSection"
                           class="btn border border-secondary rounded-pill px-3 text-primary form-control mt-1" title="Sepete Ekle"><i class="fa fa-shopping-bag text-primary me-2"></i>Sepete Ekle</a>
                        <a asp-action="Detail" asp-route-productId="@product.Id" class="btn border border-secondary rounded-pill px-3 text-primary form-control mt-1" title="İncele"><i class="fa fa-eye text-primary me-2"></i>İncele</a>
                </div>
                    <div class="mt-3"></div>
            </div>
        </div>
        }
    </div>
</div>