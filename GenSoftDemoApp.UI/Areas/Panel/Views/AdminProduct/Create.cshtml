@model CreateProductViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kaydet</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/panel">Panel</a></li>
                    <li class="breadcrumb-item active">Kaydet</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                    </div>
                    <form method="post" action="Create">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Title">Ürün Adı</label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="Ürün Adı" required>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Kategori</label>
                                <select class="form-control" asp-items="@ViewBag.categories" asp-for="CategoryId" required>
                                    <option value="">Kategori Seçiniz</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Fiyat</label>
                                <input type="number" asp-for="Price" class="form-control" value="1" min="1" step="0.1" required>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl">Ürün Görseli</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Ürün Resmi" required>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                            <a asp-action="GetAll" asp-controller="AdminProduct" asp-area="Panel" class="btn btn-info">Ürünleri Gör</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

