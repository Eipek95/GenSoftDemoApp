@using GenSoftDemoApp.UI.Enums
@using GenSoftDemoApp.UI.Extensions
@model UpdateOrderViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Düzenle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Panel</a></li>
                    <li class="breadcrumb-item active">Düzenle</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                    </div>
                    <form method="get" asp-action="Update" asp-controller="AdminOrder" asp-area="Panel">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Id">Id</label>
                                <input type="text" asp-for="Id" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                @foreach (OrderStatus status in Enum.GetValues(typeof(OrderStatus)))
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Status" value="@((int)status)"
                                        @(Model.Status == status ? "checked" : "")>
                                        <label class="form-check-label">@status.GetDisplayName()</label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
